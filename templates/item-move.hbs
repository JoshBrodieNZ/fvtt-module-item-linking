<form autocomplete="off">
    <p class="notes">Please choose a destination pack and/or folder to move the item to.</p>
    <div class="form-group">
        <label>{{ localize "FOLDER.ExportDestination" }}</label>
        <div class="form-fields">
            <select name="pack">
                {{selectOptions packs selected=pack}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>{{ localize "DOCUMENT.Folder" }}</label>
        <div class="form-fields">
            <select name="folder" {{#unless hasFolders}}disabled{{/unless}}>
                {{selectOptions folders nameAttr="id" labelAttr="name" selected=folder blank=""}}
            </select>
        </div>
    </div>
    <fieldset>
        <legend>Move Options</legend>
        <div class="form-group">
            <label>Keep Document ID?</label>
            <input type="checkbox" name="keepId" {{ checked keepId }}/>
        </div>
        <div class="form-group">
            <label>Relink Derived Items</label>
            <input type="checkbox" name="relink" {{ checked relink }}/>
        </div>
    </fieldset>
</form>
